.l-header
  position fixed
  display none
  width 100%
  height 70px
  top 0
  z-index 9999
  @extend .is-clearfix

.l-nav
  display flex
  justify-content space-between
  align-items stretch
  height 70px

.l-page
  display none
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow hidden
  transition all 1s ease-in

  &#aboutPageView,
  &#vis4PageView,
  &#vis5PageView
  &#vis6PageView
  &#vis7PageView
    top 70px

  &.is-active
    display flex

  iframe
    position absolute
    display block
    width 100%
    height 100%
    top 0
    left 0
